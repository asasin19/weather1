<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/place_grid">

    <LinearLayout
        android:orientation="vertical"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/place_left_context">

        <TextView
            android:text="Kyiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place_city"
            android:gravity="center"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_text_horizontal_offset"
            android:textColor="@android:color/black" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place_time" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place_date" />
    </LinearLayout>

    <LinearLayout
        android:layout_column="3"
        android:layout_row="0"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/place_right_context"
        android:gravity="center">

        <TextView
            android:text="20 C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/place_temperature"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:paddingTop="5dp"
            android:paddingRight="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="15 C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/place_max_temperature"
                android:layout_weight="1" />

            <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/place_max_min_divider"
                android:layout_weight="1"
                android:elevation="1dp" />

            <TextView
                android:text="25 C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/place_min_temperature"
                android:layout_weight="5" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_column="2"
        android:layout_row="0"
        android:contentDescription=""
        app:srcCompat="@drawable/cloud1"
        android:id="@+id/place_image"
        android:adjustViewBounds="false"
        android:layout_width="80dp"
        android:layout_height="60dp" />

</GridLayout>
